>>> a=60;b=13;print('a=60;b=13')                                # 给变量初始赋值
a=60;b=13
>>> print('a&b=',a&b);print('a|b=',a|b);print('a^b=',a^b)       # 或、与、异位运算（按位运算符是对变量数值的二进制运算）
a&b= 12
a|b= 61
a^b= 49
>>> print('~a=',~a);print('a<<2=',a<<2);print('a>>2=',a>>2)     # 取反和位移运算（按位运算符是对变量数值的二进制运算）
~a= -61
a<<2= 240
a>>2= 15